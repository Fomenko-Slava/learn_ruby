<table border="1" width="100%">
  <tr>
    <th>Название</th>
    <th>Автор</th>
    <% if (current_user && params[:my]) %>
        <th colspan="2">Опции</th>
    <% end  %>
  </tr>

  <% @petitions.each do |petition| %>
      <tr>
        <td><%= link_to petition.title, petition_path(petition) %></td>
        <td><%= petition.user.first_name %> <%= petition.user.last_name %></td>

        <% if (current_user && params[:my]) %>
            <td><%= link_to 'Edit', edit_petition_path(petition) %></td>
            <td><%= link_to 'Delete', petition_path(petition),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
  <% end %>
</table>